<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context="com.somesh.myproject.android.dakshproject.RegisterActivity"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        app:cardElevation="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:background="@color/colorPrimary"
            android:id="@+id/Register_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textAllCaps="true"
            android:textSize="40sp"
            android:textColor="#fff"
            android:fontFamily="serif-monospace"
            android:textAlignment="center"
            />
        <RelativeLayout
            android:layout_below="@id/Register_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Register_empid_til"
                android:layout_marginTop="16dp"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Register_empid_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:minLines="1"
                    android:drawablePadding="8dp"
                    android:inputType="number"
                    android:drawableStart="@drawable/ic_android_black_24dp"
                    android:hint="EMP ID"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Register_empid_til"
                android:id="@+id/Register_Username_til"
                android:layout_marginTop="16dp"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Register_username_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:minLines="1"
                    android:drawablePadding="8dp"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_person_outline_black_24dp"
                    android:hint="Username"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Register_Username_til"
                android:id="@+id/Register_email_til"
                android:layout_marginTop="16dp"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Register_emailid_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:minLines="1"
                    android:drawablePadding="8dp"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                    android:hint="Email ID"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:id="@+id/Register_password_til"
                android:layout_below="@id/Register_email_til"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Register_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:minLines="1"
                    android:drawablePadding="8dp"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                    android:hint="Password"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@id/Register_password_til"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Register_phoneno_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:minLines="1"
                    android:drawablePadding="8dp"
                    android:inputType="phone"
                    android:drawableStart="@drawable/ic_local_phone_black_24dp"
                    android:hint="Phone No"
                    />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Register_done_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:elevation="8dp"
        app:fabSize="normal"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        />

</RelativeLayout>
